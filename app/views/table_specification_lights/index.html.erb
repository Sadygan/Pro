<%= javascript_include_tag "table_specification_lights/index" %>
<div id="table_specification_light_page">
	<div class="container-fluid">
	  <p id="notice"><%= notice %></p>
	  <%= link_to t('table.print_pdf'), project_specification_table_specification_lights_path(@project, @specification, @table_specification_light, format: "pdf") %>
	  <%= link_to 'PDF выбранные', project_specification_index_selected_light_pdf_path(@project, @specification, @table_specification, format: "pdf") %>
	  <div class="print_sum">
	    <%= label_tag(:print_sum, t('table.print_sum')) %>
	    <%= check_box("print", @specification.id, {checked: @specification.print_sum}, @specification.id) %>
	  </div>
	  <div class="add_group_line"><%= link_to 'Вставить разделитель', new_group_line_path(:specification_id => @specification.id), remote: true %></div>
	  
	  <%= render 'table' %>
	  <%= link_to t('table.new_row'), new_project_specification_table_specification_light_path, remote: true , class: "table-button btn btn-primary", id: "form_button_light", style: "hidden" %>
	  	
	  <%= render 'tables/general_methods/photo/dialog' %>
	  <%= render 'tables/general_methods/photo/dialog_table' %>
	  <%= render 'tables/general_methods/size_image/dialog' %>
	  <%= render 'tables/general_methods/discount/dialog' %>
	  <%= render 'tables/general_methods/discount/dialog_table' %>
	  <%= render 'tables/general_methods/delivery/dialog' %>
	  <%= render 'tables/general_methods/delivery/dialog_table' %>
	  <%= render 'tables/general_methods/packing_size/dialog' %>
	  <%= render 'tables/general_methods/packing_size/dialog_table' %>
	  <%= render 'group_lines/dialog' %>

	</div>
</div>

