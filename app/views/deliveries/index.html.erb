<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Direction</th>
      <th>Cost</th>
      <th>Execution document</th>
      <th>Check factory</th>
      <th>Bank service</th>
      <th>Bank percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.direction %></td>
        <td><%= delivery.cost %></td>
        <td><%= delivery.execution_document %></td>
        <td><%= delivery.check_factory %></td>
        <td><%= delivery.bank_service %></td>
        <td><%= delivery.bank_percent %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

