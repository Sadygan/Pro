<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">DIZAAP</h1>
        <div class="account-wall">
          <%= form_for(resource, {as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}}) do |f| %>
          <div class="field">
            <%= f.email_field :email, :placeholder => "Email", autofocus: true, class: "form-control"  %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "form-control" %>
          </div>


          <div class="actions">
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        <% end %>
        <div class="row">
          <div class="col-sm-6 col-md-6 col-md-offset-6"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
