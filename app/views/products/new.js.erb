// Add the dialog title
$('#dialog h3').html("<i class='glyphicon glyphicon-plus'></i><%= t('products.new_product') %>");
 
// Render the new form
$('.modal-body').html('<%= j render("form") %>');
 
// Show the dynamic dialog
$('#dialog').modal("show");
 
// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	  $('.first_input').focus()
  })

$("form").submit(function() {
	
	if ($('#product_type_furniture_id').val() != "") {
		$('#err_furniture').html('')
	} else {
		$('#err_furniture').html('error')
	}
	if ($('#product_factory_id').val() != "") {
		$('#err_factory').html('')
	} else {

		$('#err_factory').html('error')
	}

});







