    <%= f.hidden_field :type_furniture_id %>
  </div>

  <div class="form-group">
    <%= f.label :factory, :class => "control-label" %>
    <%= f.collection_select :factory_id, Factory.order(:brand),:id,:brand, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
