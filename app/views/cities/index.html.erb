<div class="container">
  <p id="notice"><%= notice %></p>

  <h2><%= t('cities.listing') %></h2>
  <div class="well">
      <%= link_to t('cities.new'), new_city_path, remote: true, class: "btn btn-primary" %>
  </div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= t('cities.name') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="cities">
      <%= render @cities%>
    </tbody>
  </table>
  <%= render 'dialog' %>
</div>