<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>Listing Cities</h2>
  <div class="well">
    <%= link_to 'New City', new_city_path, remote: true, class: "btn btn-primary" %>
  </div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="cities">
      <%= render @cities%>
    </tbody>
  </table>
  <%= render 'dialog' %>
</div>