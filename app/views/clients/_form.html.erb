<%= form_for(@client, remote: true, :html => { :role => "form" }) do |f| %>
<div id="error_explanation" class="bg-danger text-danger">
</div>
 
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label t('client.name') %><br>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t('company.name') %><br>
        <%= f.collection_select :company_id, Company.order(:name),:id,:name, {include_blank: false}, {class: :"form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label t('client.status_position') %><br>
        <%= f.text_field :status_position, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t('client.telephone') %><br>
        <%= f.number_field :telephone, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit  @client.new_record? ? t('client.create') : t('client.update'), :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
