<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>Listing Clients</h2>
  <div class="well">
    <%= link_to 'New Client', new_client_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-client"></div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Status position</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="clients">
    <%= render @clients%>
    </tbody>
  </table>
  <%= render "dialog" %>
</div>