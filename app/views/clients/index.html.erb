<div class="container">
  <p id="notice"><%= notice %></p>

  <h2><%= t('client.listing') %></h2>
  <div class="well">
    <%= link_to t('client.new_client'), new_client_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-client"></div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= t('client.name') %></th>
        <th><%= t('company.name') %></th>
        <th><%= t('client.status_position') %></th>
        <th><%= t('client.telephone') %></th>
        <th>Email</th>
        <th><%= t('company.address') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="clients">
    <%= render @clients%>
    </tbody>
  </table>
  <%= render "dialog" %>
</div>