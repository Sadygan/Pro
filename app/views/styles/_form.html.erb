<%= form_for(@style, remote: true, :html => { :role => "form" }) do |f| %>
<div id="error_explanation" class="bg-danger text-danger">
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label t('styles.name'), :class => "control-label" %><br>
      <%= f.text_field :name, :class => "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.submit  @style.new_record? ? t('create') : t('update'), :class => "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>
