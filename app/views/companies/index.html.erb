<div class="container">
<p id="notice"><%= notice %></p>

<h2><%= t('companies.listing')  %></h2>
<div class="well">
  <%= link_to t('companies.new'), new_company_path, remote: true, class: "btn btn-primary" %>
</div>
<div class="new-company"></div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= t('companies.name')  %></th>
      <th><%= t('companies.address')  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="companies">
    <%= render @companies %>
  </tbody>
</table>
<%= render 'dialog' %>
</div>