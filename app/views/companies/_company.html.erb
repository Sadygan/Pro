	<td><%= company.address %></td>
	<td><%= link_to 'Edit', edit_company_path(company), remote: true, :class => 'btn btn-sm btn-info' %>
    </td>
	<td><%= link_to 'Delete', company, remote: true, :method => :delete, data: {confirm: "Delete Company: #{company.name}"}, :class => 'btn btn-sm btn-danger' %>
 </td>
</tr>