<%= form_for(@company, remote: true, :html => { :role => "form" }) do |f| %>
<div id="error_explanation" class="bg-danger text-danger">
</div>
 
  <div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :name, :class => "control-label" %><br>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :address, :class => "control-label" %><br>
      <%= f.text_field :address, :class => "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit  @company.new_record? ? "Create Company" : "Update Company", :class => "btn btn-primary" %>
      </div>
  
    </div>
  </div>
<% end %>
