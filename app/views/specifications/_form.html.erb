<%= form_for([@project, @specification], remote: true, :html => { :role => "form" }) do |f| %>
<div id="error_explanation" class="bg-danger text-danger">
</div>
 
<div class="row">
 <div class="col-sm-6">

  <div class="form-group">
    <%= f.label t('specification.light'), :class => "control-label" %>
    <%= f.check_box :light, :class => "form-control first_input"  %>
  </div>

  <div class="form-group">
    <%= f.label t('specification.name'), :class => "control-label" %>
    <%= f.text_field :name, :class => "form-control first_input"  %>
  </div>

  <div class="form-group">
    <%= f.label :currency, :class => "control-label" %>
    <%= f.select :currency_id, options_for_select(Specification.currency.map{ |key, value| ["#{value}", "#{key}"] },  :selected => @specification.currency_id ) %>
  </div>

 <div class="form-group">
    <%= f.submit  @specification.new_record? ? t('specification.create') : t('specification.update'), :class => "btn btn-primary" %>
   </div>
  </div>
</div>
<% end %>