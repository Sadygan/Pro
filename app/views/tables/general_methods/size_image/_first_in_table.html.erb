<% if ts.size_image_id && Asset.exists?(ts.size_image_id) %>
	<%= link_to image_tag(ts.image(ts.size_image_id)), "#", class: "invoker" %>
<% else %>
	<%= link_to image_tag('UploadDark.png'), "#", {class: "invoker", id: "upload_dark"} %> 
<% end %>
<%= form_for [@project, @specification, @table_specification_light], remote: true do |f| %>
	<%= f.hidden_field :ts_id, class: "id_table" %>
	<%= f.hidden_field :product_id, class: "product_id_table" %>
	<%= f.hidden_field :size_image_base64, class: "base64_table" %>
	<%= f.submit name: 'add_size_images', :style => "display: none;" %>
<% end %>
