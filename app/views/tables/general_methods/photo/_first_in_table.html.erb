<% unless ts.photo.nil? %>
	<%= link_to image_tag(ts.image(ts.photo_id)), "#", class: "invoker" %>
<% else %>
	<%= link_to image_tag('UploadDark.png'), "#", {class: "invoker", id: "upload_dark"} %> 
<% end %>
<%= form_for [@project, @specification, ts], remote: true do |f| %>
	<%= f.hidden_field :ts_id, class: "id_table" %>
	<%= f.hidden_field :product_id, class: "product_id_table" %>
	<%= f.hidden_field :photo_base64, class: "base64_table" %>
	<%= f.submit name: 'add_photos', :style => "display: none;" %>
<% end %>